<view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">柜式陪护床</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">椅式陪护床</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">远程操作流程</view>
</view>

<swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
    <swiper-item >
    <view class="step">步骤一</view>
    <view class="boxtitle">打开微信,扫描二维码注册</view>
    <view class="boximg">
    <image src="/static/img/c0-1.jpg"></image>
    </view>
    </swiper-item>
    <swiper-item><view class="step">椅式陪护床</view></swiper-item>
    <swiper-item><view class="step">远程操作流程</view></swiper-item>
</swiper>
